@model SodicTask.Models.Category
@{
    Layout = null;
}
<div class="box box-info">
    <div class="box-body">
        <div class="box-header with-border bg-success">
            <i class="fa fa-edit fa-fw" aria-hidden="true"></i>
            <div class="box-title">
              <label >Parent Project</label>
              <strong style="color:wheat">
                  @ViewBag.Parent
              </strong>
            </div>
        </div>
        <div class="nav-tabs-custom">
            @using (Html.BeginForm("CreateUpdate", "Catageory", FormMethod.Post, new { @class = "form-group", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken();
                <input type="hidden" name="CatagNo" value="@Model.CatagNo" />
                <div class="tab-content">

                    <div class="tab-pane active" id="tab_1">

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="page-header">
                                    <div class="page-item">
                                        <button type="submit" class="btn btn-primary" data-toggle="save" title="Save" data-placement="bottom">
                                            <i class="fa fa-fw fa-floppy-o" aria-hidden="true"></i>
                                        </button>
                                        <button type="button" class="btn btn-danger delete-account" title="Delet" id="btnDelet" data-placement="bottom">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                                        </button>

                                    </div>

                                    <div class="clearfix"></div>
                                </div>
                            </div>
                        </div>


                        <div class="row">

                            <div class="col-lg-7">
                                <div class="form-group ">
                                    <label for="Prj_NmAr"> CatagName</label>
                                    <div class="input-group">
                                        <input type="text" name="CatagName" class="form-control" value="@Model.CatagName">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <div class="form-group ">
                                    <label for="ParentNo"> ParentNo</label>
                                    <div class="input-group">
                                        <input type="text" name="ParentNo" class="form-control" id="ParentNo" value="@Model.ParentNo" readonly>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-lg-4">

                                <div class="form-group ">
                                    <label for="Size"> Size  </label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="fa fa-fw fa-info-circle" aria-hidden="true" style="color: #0b93d5"></i>
                                        </span>
                                        <input type="text" name="Size" class="form-control" value="@Model.Size">
                                    </div>
                                </div>

                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label> IsAvailable </label>
                                    <div>
                                        <label>Yes</label>
                                        @if (Model.IsAvailable==0)
                                        {
                                            <input type="checkbox" class="custom-checkbox" value="0" name="IsAvailable"  
                                                    >
                                        }
                                        else
                                        {
                                            <input type="checkbox"  class="custom-checkbox" value="1"   name="IsAvailable" checked="checked">
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row" id="Costcntr_No">
                            <div class="col-lg-8">
                                <div class="form-group">

                                    <label> Colors </label>
                                    <div class="input-group">
                                        @Html.DropDownListFor(x => x.Colors, ViewBag.Colors as SelectList, new { @class = "form-control ", onchange = "javascript:$('#Colors').val($(this).val())" })

                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label> Width</label>
                                    <div class="input-group">
                                        <input type="number" name="Width" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>




                    </div>

                </div>


            }

        </div>


    </div>
</div>

