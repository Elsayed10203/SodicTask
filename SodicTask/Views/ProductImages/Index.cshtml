@model SodicTask.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>ProductImage</h1>

<div>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>

    </dl>

    @using (Html.BeginForm("CreateAsync", " ProductImages", FormMethod.Post, new { @class = "form-group", enctype = "multipart/form-data" }))
    {<div class="form-group">
            <input type="hidden" value="@Model.ProdId" />
            <label for="file" class="btn  btn-dark ">Select Image</label>

            <input id="file" type="file" multiple name="files" accept="image/x-png,image/gif,image/jpeg">
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProdId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
